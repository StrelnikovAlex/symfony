{% extends 'base.html.twig' %}
 {% block title %}My Tasks{% endblock %}

{% block body %}
<p class="my-4"><h1 align="center" class="text-dark" >My stuff</h1></p>

<table class="table table-dark">
      <tr align="center">
      <th>Ticket name</th>
      <th>Type</th>
      <th>Status</th>
      <th>Creator</th>
      <th>Tags</th>
      <th>Number of comment</th>
    </tr>
  </thead>
  <tbody>
  {% for ticket in tickets %}
      <tr align="center">

        <th><b><a class="text-secondary" href="{{ path('ticket_show', {'id': ticket.id, 'project_id': ticket.project.id}) }}">{{ ticket.name }}</b></a></th>
        <td>{{ ticket.type }}</td>
        <td>{{ ticket.status }}</td>
        <td>{{ ticket.creator.name }}</td>
        <td>
        {% for tag in ticket.tags %}
                {{ tag.name }}&ensp;
        {% endfor %}
      </td>
        <td>{{ ticket.comments.count }}</td>

      </tr>
      {% endfor %}
  </tbody>
</table>


{% endblock %}
